	void GuiGameModeSelection(float afTimeStep)
	{
		GuiPauseDarkOverlay();
		
		ImGui_SetTransCategory("Menu");
		
		const cVector2l vResolution = cVector2l(mpConfig.GetInt("Screen", "Width", 1280), mpConfig.GetInt("Screen", "Height", 720));
