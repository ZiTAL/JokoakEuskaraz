	void GuiOptionsInputGamepadPresets_New()
	{
		GuiPauseDarkOverlay();
				
		array<tString> vMenuItems = {"GamepadPreset", "SprintMode"};
			
		for (int i=0; i<vMenuItems.length(); i++)
		{
			OptionMenu_UpdateButtonWidth(vMenuItems[i]);
		}
		
