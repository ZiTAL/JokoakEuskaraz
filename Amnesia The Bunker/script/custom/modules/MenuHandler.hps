		mpConfig.Load();
		cGraphics_GetLowLevel().SetBrightness(mpConfig.GetFloat("Graphics", "Brightness", 1.0));
		cGraphics_GetLowLevel().SetGammaCorrection(mpConfig.GetFloat("Graphics", "Gamma", 1.0));
	}

