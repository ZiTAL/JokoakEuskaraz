			if(alAction == eAction_OpenMenu && LoadScreen_IsVisible() == false)
			{
				if(mbMenuActive == false && mbPauseMenuEnabled)
				{
					mbMainMenuActive = false;
					SetMenuActive(true);
				}
				else
				{
					mbMenuButtonPressed = true;
				}
			}
		}

