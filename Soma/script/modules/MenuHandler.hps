			////////////////////////////////
			// Face Alpa
			if(mbBackgroundShowFace)
				mfBackgroundFaceAlpha = cMath_IncreaseTo(mfBackgroundFaceAlpha, afTimeStep*0.5, 1.0f);
			else
				mfBackgroundFaceAlpha = cMath_IncreaseTo(mfBackgroundFaceAlpha, afTimeStep*0.5, 0.0f);
			
			////////////////////////////////
